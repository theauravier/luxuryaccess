<h1 class="text-center" style="margin-bottom: 70px"> <%= @item.title %> </h1>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2">

      <div class="col-xs-12 col-md-8" style="padding-right: 0px">
        <div class="show-pic">
          <%= image_tag @item.picture.url(:add) %>
        </div>
      </div>

      <div class="col-xs-12 col-md-4" style="padding-right: 10px padding-left: 10px">
        <div class="request-form">
          <h2 class="text-center" style="padding-bottom:20px">Booking</h2>
          <%= simple_form_for [@item, @booking] do |f| %>
            <ul class="list-inline">
              <li><%= f.input :start_day, label: "From", as: :string, input_html: { class:"datepicker" }, error: 'Starting day should be a good day' %><li>
              <li><%= f.input :end_day, label: "Until", as: :string, input_html: { class:"datepicker" }, error: 'Starting day should be a bad day' %><li>
            </ul>
            <div class="text-center">
            <%= f.button :submit, {class:"btn btn-success"} %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

  </div>

    <div class="col-xs-12 col-sm-8 col-sm-offset-2">
      <ul class="list-group">
        <li class="list-group-item" style="background-color: rgb(253, 253, 253)">Description : <%= @item.description %></li>
        <li class="list-group-item">Price : <%= @item.daily_price %>€ per day</li>
        <li class="list-group-item" style="background-color: rgb(253, 253, 253)">Category : <%= @item.category %></li>
        <li class="list-group-item">Brand : <%= @item.brand %></li>
        <li class="list-group-item" style="background-color: rgb(253, 253, 253)">Rented by : <%= @item.owner.first_name %> <%= @item.owner.last_name %>.</li>
        <li class="list-group-item">Price : <%= @item.daily_price %>€ per day</li>
        <li class="list-group-item" style="background-color: rgb(253, 253, 253)">Available in : <%= @item.city %></li>
      </ul>
    </div>

  </div>

</div>

<div class="text-center">
  <% if @item.owner == current_user %>
    <%= link_to "Delete", item_path(@item), method: :delete, data: { confirm: 'Are you sure you want to delete this ?' }, class: "btn btn-danger" %>
    <%= link_to "Edit this item", edit_item_path(@item), class: "btn btn-warning" %>
  <% else %>
  <% end %>
  <%= link_to "Back to items list", items_path, class: "btn btn-primary" %>
</div>
