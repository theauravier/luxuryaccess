<h1> Detail of <%= @item.title %> </h1>
<ul>
    <li>Description : <%= @item.description %></li>
    <li>Rented by : <%= @item.owner.first_name %></li>
    <li>Price : <%= @item.daily_price %> per day</li>
    <li>Category : <%= @item.category %></li>
    <li>Brand : <%= @item.brand %></li>
    <li>Available in : <%= @item.city %></li>
    <li><%= image_tag @item.picture.url(:medium) %></li>
</ul>

<% if @item.owner == current_user %>
<%= link_to "Delete", item_path(@item), method: :delete, data: { confirm: 'Are you sure you want to delete this ?' }, class: "btn btn-danger" %>
<% else %>
<% end %>
<%= link_to "Back to items list", items_path, class: "btn btn-primary" %>
