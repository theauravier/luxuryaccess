<h1>Items#new</h1>
<p>Find me in app/views/items/new.html.erb</p>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <%= simple_form_for(@item) do |f| %>
        <%= f.input :title, placeholder: "Oyster perpetual rolex" %>
        <%= f.input :daily_price, placeholder: "19" %>
        <%= f.input :description, as: :text %>
        <%= f.input :category, collection: [ "Watch", "Jewels", "Handbag"] %>
        <%= f.input :brand %>
        <%= f.input :city %>
        <%= f.button :submit, class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>
