<header class="montruc">
  <div class="content">
    <hgroup>
      <h1>Access luxury for a day</h1>
      <h2>Rent jewelry, watches and bags from the best designers</h2>
        <% if params.has_key? "category" %>
          <%= form_tag '/items', class: "form-inline", :method => :get do %>
            <%= hidden_field_tag 'category', @items.first.category %>
            <%= number_field_tag 'max_price' %>
            <%= submit_tag "Search", class: "btn btn-success" %>
          <% end %>
        <% else %>
           <%= form_tag '/items', id: "category_choice", class: "form-inline", :method => :get do %>
              <%= select_tag "category", options_for_select([ "Watch", "Jewel", "Handbag" ]),class: "form-control", prompt: "What do you want to rent ?" %>
            <% end %>
         <% end %>
    </hgroup>
  </div>
</header>

