<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h2 class="text-center">Edit <%= @item.title %></h2>
      <%= simple_form_for(@item) do |f| %>
        <%= f.input :title, placeholder: "Oyster perpetual rolex" %>
        <%= f.input :daily_price, placeholder: "19" %>
        <%= f.input :description, as: :text %>
        <%= f.input :category, collection: [ "Watch", "Jewels", "Handbag"] %>
        <%= f.input :brand %>
        <%= f.input :city, as: :hidden, :input_html => { :value => "Paris" } %>
        <%= image_tag @item.picture.url(:medium) %>
        <%= f.input :picture %>
        <%= f.button :submit, class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>
